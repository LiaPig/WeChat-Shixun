.cart {
  position: fixed;
  width: 100%;
  bottom: 0; 
  height: 150rpx;   
  background-color: #E5E9F2;
  z-index: 99;
}

.cart_left {
  float: left;
  height: 100%;
  width: 75%;
}

.cart .cart_left .cart_left_logo {
  float: left;
  width: 30%;
  height: 100%;
  padding-top: 20rpx;
}

.active {
  color: red;
}

.cart .cart_left .cart_left_logo .cart_left_logo_count {
  position: relative;
  display: inline-block;
  background-color: black;
  float: right;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 35rpx;
  z-index: 99999;
}

.cart .cart_left .cart_left_text_active {
  display: inline-block;
  float: left;
  height: 150rpx;
  width: 70%;
  text-align: center;
  font-size: 60rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  color: red;
}

.cart .cart_left .cart_left_text {
  display: inline-block;
  float: left;
  height: 150rpx;
  width: 70%;
  text-align: center;
  font-size: 40rpx;
  padding-top: 45rpx;
  padding-bottom: 45rpx;
}

.cart .cart_right_active {
  background: red;
  color: white;
  float: right;
  height: 100%;
  width: 25%;
  text-align: center;
  font-size: 50rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.cart .cart_right {
  background: black;
  color: white;
  float: right;
  height: 100%;
  width: 25%;
  text-align: center;
  font-size: 50rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.buydes-dialog-container{  
    width: 100%;  
    height: 100%;  
    justify-content: space-between;  
    background-color:rgba(15, 15, 26, 0.7);  
    position: fixed;  
    z-index: 999;  
}  
  
.buydes-dialog-container-top{  
    flex-grow: 1;  
}  
  
.buydes-dialog-container-bottom{  
    display: flex;  
    flex-grow: 0;  
}  
  
.buydes-dialog-container-bottom-item{  
    padding:24rpx;  
    display: flex;  
    justify-content: center;  
    border-bottom: 1rpx solid #eeeeee;  
}

/* 购物车Modal层 */
/* 开始 */
.cartModal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
/* 弹窗的遮蔽层 */
.cartModal .cartModal_mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
}
/*弹窗主体*/
.cartModal .cartModal_content {
	position: fixed;
	bottom: 150rpx;
	left: 0;
	width: 100%;
  max-height: 30%;
	/* height: 235px; */
	/*box-shadow: 10rpx 0 30rpx rgba(0,0,0,.9);*/
	background: #fff;
	z-index: 99;
}  

/* 弹窗主题的标题 */
.cartModal .cartModal_content .content_header {
  position: relative;
  top: 0;
  display: inline-block;
  width: 100%;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border-bottom: 1rpx solid #000;
  font-size: 40rpx;
  background-color: #EFF2F7;
  color: red;
}

.cartModal .cartModal_content .content_header .content_header_deleteAll{
  float: right;
  color: #324057;
  font-size: 36rpx;
}

.cartModal .cartModal_content .content_body {
  position: relative;
  width: 100%;
  /* max-height: 30%; */
  height:150rpx;
  overflow: auto;
}

.cartModal .cartModal_content .content_body .body_item{
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #000;
}

.cartModal .cartModal_content .content_body .body_item .information {
  float: left;
  width: 35%;
  padding-left: 30rpx;
}

.cartModal .cartModal_content .content_body .body_item .body_item_title {
  padding-top: 5rpx;
  font-weight:bold;
}

.cartModal .cartModal_content .content_body .body_item .body_item_size {
  font-size: 30rpx;
  color: #324057;
}
