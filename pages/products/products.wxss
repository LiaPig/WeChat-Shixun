}

.cart .cart_left .cart_left_text_active {
  display: inline-block;
  float: left;
  height: 150rpx;
  width: 70%;
  text-align: center;
  font-size: 60rpx;
  padding-top: 35rpx;
  color: red;
}

.cart .cart_left .cart_left_text {
  display: inline-block;
  float: left;
  height: 150rpx;
  width: 70%;
  text-align: center;
